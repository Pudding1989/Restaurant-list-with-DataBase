<h1 class="mb-1 restaurant-show-title">{{object.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{object.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{object.location}}
        <a href="{{object.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{object.phone}}
      </p>

      <p class="mb-5">
        {{object.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{object.image}}" alt="{{object.name}}"
        style="max-width: 600px;">
    </div>
  </div>
  <div class="row">
    <class class="interactive col-12 mt-3 mb-5">
      <a href="/">
        <button type="button" class="btn btn-major px-3">返回清單</button>
      </a>
      <a href="/restaurants/{{object._id}}/edit">
        <button type="button" class="btn btn-info px-3">編輯</button>
      </a>
      {{!-- Modal button --}}
      <button type="button" class="show-delete btn btn-outline-danger" data-toggle="modal" data-target="#delete-{{object._id}}">刪除</button>

    </class>
  </div>
</div>

{{!-- Modal --}}
<div class="modal fade" id="delete-{{object._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title text-danger">確定要刪除嗎？</h3>
        <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-major mr-3" data-dismiss="modal">返回</button>
        <form action="/restaurants/{{object._id}}?_method=DELETE" style='display:inline;' method="post">
          <button type="submit" class="btn btn-outline-danger">確認刪除</button>
        </form>
      </div>

    </div>
  </div>
</div><!-- Modal -->